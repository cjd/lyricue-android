<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout_tablet"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:baselineAligned="false">
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="654dp"
        android:layout_height="fill_parent"
        android:layout_weight="0">

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            >

            <Button
                android:id="@+id/ButtonPrevPage"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#FF000000"
                android:drawableTop="@android:drawable/ic_media_rew"
                android:onClick="onClickControl"
                android:text="@string/prevpage"
                android:textColor="#ffffffff" />

            <Button
                android:id="@+id/ButtonNextPage"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#FF000000"
                android:drawableTop="@android:drawable/ic_media_ff"
                android:onClick="onClickControl"
                android:text="@string/nextpage"
                android:textColor="#ffffffff" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            >



            <Button
                android:id="@+id/ButtonPrevSong"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#FF000000"
                android:drawableTop="@android:drawable/ic_media_previous"
                android:onClick="onClickControl"
                android:text="@string/prevsong"
                android:textColor="#ffffffff" />
            <Button
                android:id="@+id/ButtonNextSong"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#FF000000"
                android:drawableTop="@android:drawable/ic_media_next"
                android:onClick="onClickControl"
                android:text="@string/nextsong"
                android:textColor="#ffffffff" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"         android:layout_weight="1"
            >

            <Button
                android:id="@+id/ButtonRedisplay"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#FF000000"
                android:drawableTop="@android:drawable/ic_media_play"
                android:onClick="onClickControl"
                android:text="@string/redisplay"
                android:textColor="#ffffffff"
                tools:ignore="InconsistentLayout" />

            <Button
                android:id="@+id/ButtonBlank"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#FF000000"
                android:drawableTop="@android:drawable/ic_media_pause"
                android:onClick="onClickControl"
                android:text="@string/blank"
                android:textColor="#ffffffff" />
        </TableRow>

    </TableLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1" >

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/hline1"
            />

        <View
            android:id="@+id/hline1"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_above="@+id/quickBar"
            android:layout_centerVertical="true"
            android:background="#FF33B5E5" />

        <LinearLayout
            android:id="@+id/quickBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" >

            <ImageButton
                android:id="@+id/ButtonQuickPP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FF000000"
                android:clickable="true"
                android:contentDescription="@string/prevpage"
                android:onClick="onClickControl"
                android:src="@android:drawable/ic_media_rew"
                android:textColor="#ffffffff" />

            <ImageButton
                android:id="@+id/ButtonQuickNP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FF000000"
                android:contentDescription="@string/nextpage"
                android:onClick="onClickControl"
                android:src="@android:drawable/ic_media_ff"
                android:textColor="#ffffffff" />

            <ImageButton
                android:id="@+id/ButtonQuickPS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FF000000"
                android:contentDescription="@string/prevsong"
                android:onClick="onClickControl"
                android:src="@android:drawable/ic_media_previous"
                android:textColor="#ffffffff" />

            <ImageButton
                android:id="@+id/ButtonQuickNS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FF000000"
                android:contentDescription="@string/nextsong"
                android:onClick="onClickControl"
                android:src="@android:drawable/ic_media_next"
                android:textColor="#ffffffff" />

            <ImageButton
                android:id="@+id/ButtonQuickBL"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FF000000"
                android:contentDescription="@string/blank"
                android:onClick="onClickControl"
                android:src="@android:drawable/ic_media_pause"
                android:textColor="#ffffffff" />

            <ImageButton
                android:id="@+id/ButtonQuickRS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FF000000"
                android:contentDescription="@string/redisplay"
                android:onClick="onClickControl"
                android:src="@android:drawable/ic_media_play"
                android:textColor="#ffffffff" />
        </LinearLayout>

        <TextView
            android:id="@+id/textDemo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="@string/demo"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </RelativeLayout>

</LinearLayout>